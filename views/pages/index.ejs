		<div class="container">
			<form>
				<div class="form-group">
					<label for="srcZip">Source Zip Code</label>
					<input type="text" class="form-control" id="srcZip" placeholder="Source Zip Code">
				</div>
				<div class="form-group">
					<label for="destZip">Destination Zip Code</label>
					<input type="text" class="form-control" id="destZip" placeholder="Destination Zip Code">
				</div>
				<div class="form-group">
					<label for="itemType">Item Type</label>
					<select class="form-control">
						<option>Postcard</option>
						<option>Envelope</option>
						<option>Package</option>
					</select>
				</div>
				<div class="form-group">
					<label for="length">Dimensions</label>
					<div class="row">
						<div class="col-xs-2">
							<input type="text" class="form-control" id="length" placeholder="L">
						</div>
						<div class="col-xs-2">
							<input type="text" class="form-control" id="width" placeholder="W">
						</div>					
						<div class="col-xs-2">
							<input type="text" class="form-control" id="height" placeholder="H">
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="weight">Weight</label>
					<input type="text" class="form-control" id="weight" placeholder="Weight">
				</div>
				<button class="btn btn-default" type="button" data-toggle="collapse" 
				data-target="#moreOptions" aria-expanded="false" aria-controls="moreOptions">
					Show more options
				</button>
				
				<div class="form-group">
					<div class="collapse" id="moreOptions">
					
						<div class="form-group">
							<label for="date">Shipment date</label>
							<input type="date" class="form-control" id="date">
						</div>
						
						<div class="form-group">
							<label for="value">Value of item(s)</label>
							<input type="text" class="form-control" id="value" placeholder="Value">
						</div>
						
						<div class="form-group">
							<label>Other options</label>
							<div class="checkbox">
								<label>
									<input type="checkbox"> Contains hazardous material
								</label>
							</div>
							<div class="checkbox">
								<label>
									<input type="checkbox"> Fragile
								</label>
							</div>
						</div>
					</div>
				</div>
				
				<div class="form-group">
					<label>Carrier</label><br>
					<label class="checkbox-inline">
						<input type="checkbox" checked> USPS
					</label>
					<label class="checkbox-inline">
						<input type="checkbox" checked> FedEx
					</label>
					<label class="checkbox-inline">
						<input type="checkbox" checked> UPS
					</label>
				</div>
			
				<div class="form-group">
					<button type="submit" class="btn btn-primary">Calculate!</button>
				</div>
			</form>

